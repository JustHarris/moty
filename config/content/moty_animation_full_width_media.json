{
  "name": "Moty Animation Full width media",
  "description": "Large content whit 2 columns text and image.",
  "fields": [
    {
      "label": "Content",
      "type": "field_group",
      "fields": [
        {
          "id": "title",
          "label": "Title",
          "type": "rich_html",
          "required": true
        },
        {
          "id": "description",
          "label": "Description text",
          "type": "rich_html",
          "required": true
        },
        {
          "id": "image",
          "label": "Large image",
          "type": "image",
          "required": true
        },
        {
          "id": "links",
          "label": "Links",
          "type": "collection",
          "max": 2,
          "required": false,
          "fields": [
            {
              "id": "style",
              "label": "Style",
              "type": "select",
              "default": "button_primary",
              "options": [
                {
                  "value": "text",
                  "label": "Text"
                },
                {
                  "value": "button_primary",
                  "label": "Primary button"
                }
              ]
            },
            {
              "id": "label",
              "label": "Label text",
              "type": "text",
              "required": true
            },
            {
              "id": "url",
              "label": "Link URL",
              "type": "url",
              "required": true
            }
          ]
        }
      ]
    },
    {
      "label": "Styling",
      "type": "field_group",
      "fields": [
        {
          "id": "bg_color",
          "label": "Background color",
          "type": "select",
          "default": "moty-oklight",
          "options": [
            {
              "value": "moty-oklight",
              "label": "Background (primary)"
            },
            {
              "value": "moty-darker",
              "label": "Background (secondary)"
            }
          ]
        }
      ]
    }
  ]
}
