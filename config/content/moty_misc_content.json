{
  "name": "Moty Misc Content",
  "description": "Moty Misc Content with a header, text, a image, and a list of bullet items whit parameters ",
  "fields": [
    {
      "label": "Content",
      "type": "field_group",
      "fields": [
        {
          "id": "heading",
          "label": "Heading text",
          "type": "text",
          "required": true
        },
        {
          "id": "text",
          "label": "Body text",
          "type": "textarea",
          "ui": "basic_html"
        },
        {
          "id": "image",
          "label": "Background image",
          "type": "image",
          "required": true
        },
        {
          "id": "list",
          "label": "Bullet list items",
          "type": "collection",
          "required": true,
          "fields": [
            {
              "id": "bullet_title",
              "label": "Bullet item title",
              "type": "text"
            },
            {
              "id": "bullet_text",
              "label": "Bullet item text",
              "type": "textarea",
              "ui": "basic_html"
            }
          ]
        }
      ]
    },
    {
      "label": "Styling",
      "type": "field_group",
      "fields": [
        {
          "id": "img_position",
          "label": "Image Position",
          "type": "select",
          "default": "left",
          "options": [
            {
              "value": "right",
              "label": "Right"
            },
            {
              "value": "left",
              "label": "Left"
            }
          ]
        }
      ]
    }
  ]
}
