  "fields": [
    {
      "label": "Content",
      "type": "field_group",
      "fields": [
        {
          "id": "heading",
          "label": "Heading text", 
          "type": "text",
          "required": true
        },                
        {
          "id": "text",
          "label": "Body text",
          "type": "textarea",
          "ui": "basic_html",
          "required": true
        },
        {
          "id": "image",
          "label": "Background image",
          "type": "image",
          "required": true
        }
      ]
