    {
      "label": "Styling",
      "type": "field_group",
      "fields": [
        {
          "id": "img_position",
          "label": "Image Position",
          "type": "select",
          "default": "left",
          "options": [
            {
              "value": "right",
              "label": "Right"
            },
            {
              "value": "left",
              "label": "Left"
            }
          ]
        },
        {
          "id": "img_bgcolor",
          "label": "Image BG Color",
          "type": "color",
          "default": "#EFF0F6"
